<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ui.MainMenu">

  <children>
      <Button id="buttonNewGame" fx:id="buttonNewGame" mnemonicParsing="false" onMouseClicked="#buttonNewGame" text="New Game">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Button id="buttonSettings" fx:id="buttonSettings" alignment="CENTER" onMouseClicked="#buttonSettings" text="Settings">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Button id="buttonProfile" fx:id="buttonProfile" mnemonicParsing="false" onMouseClicked="#buttonProfile" text="Profile">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
      <Button id="buttonExit" fx:id="buttonExit" mnemonicParsing="false" onMouseClicked="#buttonExit" text="Exit">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Button>
  </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</VBox>
